<div class="admin_banner">
  <% if admin? %>
    Hi, <%= session[:admin] %>&nbsp;
    <%= link_to 'Sign out', destroy_session_path, method: :delete %>
  <% else %>
    <%= form_tag create_session_path, method: :post do -%>
      <%= text_field_tag 'login' %>
      <%= password_field_tag 'password', nil %>
      <%= submit_tag 'Sign in' %>
    <% end -%>
  <% end %>
</div>