<%= form_for(@article, :url => update_article_path, :html => { :multipart => true }) do |f| %>
	<% if @article.errors.any? %>
	 	<div id="error_explanation">
	   	<h2><%= pluralize(@article.errors.count, "error") %> bitch</h2>

	   	<ul>
	   	<% @article.errors.full_messages.each do |msg| %>
	     	<li><%= msg %></li>
	   	<% end %>
	   	</ul>
		</div>
	<% end %>

	<div class="edit_article_form">
		<div class="article_banner no1">1</div>
		<div class="field">
	    <%= f.text_field :title %>
	  </div>
		<div class="field_image" style="background: url('<%= @article.image.banner %>')">
	    <div class="upload_wrap"><%= f.file_field :image %></div>
	  </div>
		<div class="field_text">
	    <%= f.text_area :text %>
	  </div>
		<div class="field_link">
	    <%= f.text_field :link %>
	  </div>
		<div class="actions_submit">
	    <%= f.submit %>
	  </div>
	</div>
	
<% end %>
