<a target="_blank" class="article" href="<%= article.shortened_url %>"  id="<%= article.position %>">
  <div class="article_banner no<%= article.position %>"><%= article.position %></div>
  <h2><%= article.title %></h2>
  <% if article.first? %>
    <div class="button"></div>
  <% end %>
  <img src="<%= article.image.banner %>" alt="<%= article.title %>" />
  <div class="article_summary"><%= article.summary %></div>
</a>
<% if admin? %>
  <div class="visits">
    Visits: <%= article.visits %>
  </div>
  <div class="admin_controls">
    <%= article.position.to_s %> | 
    <%= link_to 'Up', up_article_path(article) %> | 
    <%= link_to 'Down', down_article_path(article) %> | 
    <%= link_to 'Crop', crop_article_path(article) %>| 
    <%= link_to 'Edit', edit_article_path(article) %> | 
    <%= link_to 'Archive', archive_article_path(article), data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>